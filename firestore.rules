rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anonymous users to read RSS feeds (public data)
    match /rss/{document} {
      allow read: if true;
    }
    
    // Allow anonymous users to read articles (public data)
    match /articles/{category}/{sourceName}/{articleId} {
      allow read: if true;
    }
    
    // Allow users to read/write their own user profile and preferences
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to read/write their notification preferences
      match /notificationPreferences/{preferenceId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /news_topics/{topic} {
      allow read: if request.auth != null;
    }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
